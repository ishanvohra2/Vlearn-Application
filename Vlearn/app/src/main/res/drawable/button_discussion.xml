<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dip"/>
            <stroke android:color="#3F51B5" android:width="1dip"/>
            <gradient android:endColor="#2C4762" android:startColor="#2C4762" android:angle="-90"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dip"/>
            <stroke android:color="#2C4762" android:width="1dip"/>
            <solid android:color="#2C4762"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dip"/>
            <stroke android:color="#2C4762" android:width="1dip"/>
            <gradient android:endColor="#2C4762" android:startColor="#2C4762" android:angle="-90"/>
        </shape>
    </item>

</selector>